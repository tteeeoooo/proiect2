@model CheckoutViewModel

<h2>Checkout</h2>

<form asp-action="PlaceOrder" asp-controller="ShoppingCart" method="post">
    @Html.AntiForgeryToken()

    <h3>Shipping Information</h3>
    <div class="form-group">
        <label asp-for="ShippingAddress"></label>
        <input asp-for="ShippingAddress" class="form-control" />
        <span asp-validation-for="ShippingAddress" class="text-danger"></span>
    </div>

    <h3>Payment Information</h3>
    <div class="form-group">
        <label asp-for="CardholderName"></label>
        <input asp-for="CardholderName" class="form-control" />
        <span asp-validation-for="CardholderName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CardNumber"></label>
        <input asp-for="CardNumber" class="form-control" />
        <span asp-validation-for="CardNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ExpirationDate"></label>
        <input asp-for="ExpirationDate" class="form-control" placeholder="MM/YY" />
        <span asp-validation-for="ExpirationDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CVV"></label>
        <input asp-for="CVV" class="form-control" />
        <span asp-validation-for="CVV" class="text-danger"></span>
    </div>

    <h3>Order Summary</h3>
    <p><strong>Total:</strong> @Model.TotalAmount.ToString("C")</p>

    <button type="submit" class="btn btn-success">Place Order</button>
</form>